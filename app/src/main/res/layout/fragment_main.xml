<?xml version="1.0" encoding="utf-8"?>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a53638138e.magicintento.MainActivityFragment"
    tools:showIn="@layout/activity_main">
        <Button
            android:text="P-"
            android:layout_width="wrap_content"
            android:id="@+id/venenomenos"
            android:layout_height="wrap_content"
            android:textColor="#009933"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:text="P-"
            android:layout_width="wrap_content"
            android:id="@+id/venenomenos2"
            android:layout_height="wrap_content"
            android:textColor="#009933"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageButton
            android:text="Vida--"
            android:layout_width="0dp"
            android:id="@+id/vidamenos"
            android:scaleType="fitCenter"
            android:src="@drawable/vidamenos"
            android:layout_height="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="@+id/venenomenos"
            app:layout_constraintBottom_toTopOf="@+id/jugador1"
            app:layout_constraintTop_toBottomOf="@+id/venenomenos"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:text="Vida ++"
            android:id="@+id/vidamas"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/venenomas"
            android:scaleType="fitCenter"
            android:src="@drawable/vidamas"
            android:layout_width="0dp"
            app:layout_constraintBottom_toTopOf="@+id/jugador1"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintRight_toRightOf="@+id/venenomas" />

        <Button
            android:text="P+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/venenomas"
            android:textColor="#009933"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:text="P+"
            android:layout_height="wrap_content"
            android:id="@+id/venenomas2"
            android:layout_width="wrap_content"
            android:textColor="#009933"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:text="Vida 20/0"
            android:layout_width="wrap_content"
            android:id="@+id/vidados2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/vidamas2"
            app:layout_constraintRight_toLeftOf="@+id/vidamenos2"
            android:layout_marginBottom="32dp" />

        <TextView
            android:text="Vida 20/0"
            android:layout_height="wrap_content"
            android:id="@+id/vidauno"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/vidamenos"
            app:layout_constraintLeft_toRightOf="@+id/vidamas"
            android:layout_marginTop="32dp" />
    <ImageButton
            android:text="A"
            android:scaleType="fitCenter"
            android:layout_width="0dp"
            android:id="@+id/jugador1"
            android:src="@drawable/flechaarriba"
            android:adjustViewBounds="true"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="128dp"
            app:layout_constraintTop_toBottomOf="@+id/vidauno"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_height="50dp"
        android:elevation="0dp" />

        <ImageButton
            android:text="V"
            android:id="@+id/jugador2"
            android:scaleType="fitCenter"
            android:src="@drawable/flechaabajo"
            android:layout_width="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/jugador1"
            app:layout_constraintBottom_toTopOf="@+id/vidados2"
            android:layout_marginBottom="120dp"
            android:layout_height="50dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

        <ImageButton
            android:text="VIDA--"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/vidamenos2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/venenomenos2"
            android:scaleType="fitCenter"
            android:src="@drawable/vidamenos"
            app:layout_constraintLeft_toLeftOf="@+id/venenomenos2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/jugador2" />

        <ImageButton
            android:text="VIDA++"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/vidamas2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/venenomas2"
            android:scaleType="fitCenter"
            android:src="@drawable/vidamas"
            app:layout_constraintTop_toBottomOf="@+id/jugador2"
            app:layout_constraintRight_toRightOf="@+id/venenomas2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0" />

    </android.support.constraint.ConstraintLayout>
